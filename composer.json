{
    "name":"janborg/contao-ical-bundle",
    "description":"Bietet erweiterete ical Funktionen fürden Contao Kalender",
    "keywords":["Kalender", "ical", "ics", "webcal", "Export"],
    "type":"contao-bundle",
    "license":"MIT",
    "authors":[
        {
            "name":"Jan Lünborg",
            "homepage":"https://github.com/janborg"
        }
    ],
    "require":{
        "php":"^8.1",
        "contao/core-bundle": "^4.13 || ^5.0",
        "contao/calendar-bundle": "^4.13 || ^5.0",
        "kigkonsult/icalcreator": "^2.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.5",
        "contao/manager-plugin": "^2.0",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.1"
    },
    "conflict": {
         "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Janborg\\IcalBundle\\": "src/"
          }
      },
    "autoload-dev": {
      "psr-4": {
          "Janborg\\IcalBundle\\Tests\\": "tests/"
          }
      },
      "extra":{
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
      "contao-manager-plugin": "Janborg\\IcalBundle\\ContaoManager\\Plugin"
    },
    "support": {
        "issues": "https://github.com/janborg/contao-ical-bundle/issues",
        "source": "https://github.com/janborg/contao-ical-bundle"
    }, 
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "contao-community-alliance/composer-plugin": true,
            "contao/manager-plugin": true,
            "bamarni/composer-bin-plugin": true
        }
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@ecs",
            "@phpstan"
        ],
        "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi",
        "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
